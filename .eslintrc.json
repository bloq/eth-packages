{
  "extends": ["bloq", "prettier"],
  "ignorePatterns": "packages/*/dist/*",
  "overrides": [
    {
      "extends": ["bloq/typescript", "prettier"],
      "files": ["packages/**/*.ts"]
    },
    {
      "extends": ["bloq/vitest", "prettier"],
      "files": ["*.{spec,test}.{js,ts}"]
    }
  ],
  "parserOptions": {
    "sourceType": "module"
  }
}
